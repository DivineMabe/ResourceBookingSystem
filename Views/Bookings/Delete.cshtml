@model ResourceBookingSystem.Models.Resource

@{
    ViewData["Title"] = "Delete Resource";
}

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 2rem;
        color: #333;
    }

    .delete-container {
        max-width: 700px;
        margin: auto;
        background-color: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    }

    .delete-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .delete-header i {
            font-size: 2.5rem;
            color: #e53935;
        }

        .delete-header h2 {
            color: #d32f2f;
            margin-top: 0.5rem;
            font-size: 1.8rem;
            font-weight: 600;
        }

        .delete-header p {
            font-size: 1.05rem;
            color: #555;
            margin-bottom: 1.5rem;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2rem;
    }

        table th, table td {
            padding: 0.75rem 1rem;
            border: 1px solid #ddd;
            text-align: left;
            font-size: 1rem;
        }

        table th {
            background-color: #f9f9f9;
            width: 35%;
            color: #555;
        }

        table td {
            background-color: #fff;
        }

    form {
        text-align: center;
    }

    .btn {
        padding: 10px 24px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 6px;
        border: none;
        margin: 0 10px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

    .btn-danger {
        background-color: #e53935;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c62828;
        }

    .btn-secondary {
        background-color: #9e9e9e;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #757575;
        }
</style>

<div class="delete-container">
    <div class="delete-header">
        <i class="fas fa-exclamation-triangle"></i>
        <h2>Delete Resource</h2>
        <p>Are you sure you want to delete this booking?</p>
    </div>

    <table>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Location</th>
            <td>@Model.Location</td>
        </tr>
        <tr>
            <th>Capacity</th>
            <td>@Model.Capacity</td>
        </tr>
        <tr>
            <th>Available</th>
            <td>@(Model.IsAvailable ? "Yes" : "No")</td>
        </tr>
    </table>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
